<form method="post" action="/loans/<%= @loan.id %>">

  <label for="first-name-field">First Name:</label>
  <input
  type="text"
  name="first_name"
  id="first-name-field"
  value = "<%= @member.first_name %>"
  />

  <label for="last-name-field">Last Name:</label>
  <input
  type="text"
  name="last_name"
  id="last-name-field"
  value = "<%= @member.last_name %>"
  />

  <label for="postcode-field">Post Code:</label>
  <input
  type="text"
  name="post_code"
  id="postcode-field"
  value = "<%= @member.post_code %>"
  />

  <label for="email-address-field">Email Address:</label>
  <input
  type="text"
  name="last_name"
  id="email-address-field"
  value = "<%= @member.email_address %>"
  />

  <p>Active Membership:</p>
  <input type="radio" id="active-membership-yes"
     name="active-membership" value="true">
    <label for="active-membership-yes">Yes</label>

    <input type="radio" id="active-membership-no"
       name="active-membership" value="false">
      <label for="active-membership-no">No</label>




  <input type="submit" value="Edit existing Loan!">
</form>
