<h1>Members</h1>

<table>
  <tr>
    <th>First Name</th>
    <th></th>
    <th>Last Name</th>
    <th></th>
    <th>Post Code</th>
    <th></th>
    <th>E-mail</th>
    <th></th>
    <th>Active Membership</th>
  </tr>
  <% for member in @members %>
  <tr>
    <td><a href="/members/<%= member.id %>"><%= member.first_name %></a></td>
    <td>|</td>
    <td><a href="/members/<%= member.id %>"><%= member.last_name %></a></td>
    <td>|</td>
    <td><%= member.post_code %></td>
    <td>|</td>
    <td><%= member.email_address %></td>
    <td>|</td>
    <td><a href="/members/<%= member.id %>"><%= member.active_membership
%>
      <% if true
        puts "Yes"
        else
        puts "No - ** DO NOT LOAN ** (until membership renewed)"
        end %></a></td>

    <td>|</td>
  </tr>
  <% end %>
</table>
