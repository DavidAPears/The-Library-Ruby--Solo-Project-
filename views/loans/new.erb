<h1>Check a book out</h1>

<form action="/loans" method="post">
  <label>
  Select a book:
    <select name="book_id">
      <% for book in @books %>
      <option value="<%= book.id %>"><%= book.title %></option>
      <% end %>
    </select>
  </label>

  <label>
    Select a member:
    <select name="member_id">
      <% for member in @members %>
      <option value="<%= member.id %>"><%= member.last_name %></option>
      <% end %>
    </select>
  </label>

  <input class="btn btn--action" type='submit' value="loan made!">
</form>
