<form method="post" action="/members/<%= @member.id %>">

  <label for="first-name-field">First Name:</label>
  <input
  type="text"
  name="first_name"
  id="first-name-field"
  value = "<%= @member.first_name %>"
  />

  <label for="last-name-field">Last Name:</label>
  <input
  type="text"
  name="last_name"
  id="last-name-field"
  value = "<%= @member.last_name %>"
  />

  <label for="postcode-field">Post Code:</label>
  <input
  type="text"
  name="post_code"
  id="postcode-field"
  value = "<%= @member.post_code %>"
  />

  <label for="email-address-field">Email Address:</label>
  <input
  type="text"
  name="email_address"
  id="email-address-field"
  value = "<%= @member.email_address %>"
  />

  <label for="active-membership-field">Active Membership:</label>
  <input
  type="boolean"
  name="active_membership"
  id="active-membership-field"
  value = "<%= @member.active? %>"
  />

  <input type="submit" value="Save changes to MEMBER!">

</form>
