<h1>Loans</h1>
<br></br>
<form method="get" action="/loans/new">
    <button type="submit">Register new LOAN !</button>
</form>
<br></br>
<table>
  <tr>
    <th>Member</th>
    <th></th>
    <th>Book</th>
    <th></th>
    <th>Loan Start Date</th>
    <th></th>
    <th>Length Of Loan</th>
    <th></th>
    <th>Has Book Been Returned? </th>
  </tr>

  <% for loan in @loans %>

  <tr>
    <td><a href="/loans/<%= loan.id %>"><%= loan.member_id %></a></td>
    <td>|</td>
    <td><a href="/loans/<%= loan.id %>"><%= loan.book_id %></a></td>
    <td>|</td>
    <td><a href="/loans/<%= loan.id %>"><%= loan.loan_start_date %></a></td>
    <td>|</td>
    <td><%= loan.loan_length %></td>
    <td>|</td>
    <td><a href="/loans/<%= loan.id %>"><%= loan.book_returned%></a></td>
    <td>|</td>
  </tr>

  <% end %>
</table>
