<h1>Loans</h1>
<br>
  <a href="/loans/new">
    <img src="/images/addicon.jpeg" alt="loan book out" style="width:42px;height:42px;border:0">
  </a>
</br>
<table>
  <tr>
    <th>Member</th>
    <th></th>
    <th>Book</th>
    <th></th>
    <th>Loan Start Date</th>
    <th></th>
    <th>Length Of Loan</th>
    <th></th>
    <th>Has Book Been Returned? </th>
  </tr>

  <% for loan in @loans %>

  <tr>
    <td><a href="/loans/<%= loan.id %>"><%= loan.member_id %></a></td>
    <td>|</td>
    <td><a href="/loans/<%= loan.id %>"><%= loan.book_id %></a></td>
    <td>|</td>
    <td><a href="/loans/<%= loan.id %>"><%= loan.loan_start_date %></a></td>
    <td>|</td>
    <td><%= loan.loan_length %></td>
    <td>|</td>
    <td><a href="/loans/<%= loan.id %>"><%= loan.returned?%></a></td>
    <td>|</td>
  </tr>

  <% end %>

</table>
