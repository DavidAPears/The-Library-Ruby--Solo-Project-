<h1>Members</h1>

<h2>
  <a href="/members/new">
    <img src="/images/adduser.png" alt="Add new member" style="width:100px;height:100px;border:0">
  </a>
</h2>

<table>
  <tr>
    <th>First Name</th>
    <th></th>
    <th>Last Name</th>
    <th></th>
    <th>Post Code</th>
    <th></th>
    <th>E-mail</th>
    <th></th>
    <th>Active Membership</th>
    <th></th>
    <th></th>
    <th></th>
    <th></th>
  </tr>
  <% for member in @members %>
  <tr>
    <td><a href="/members/<%= member.id %>"><%= member.first_name %></a></td>
    <td>|</td>
    <td><a href="/members/<%= member.id %>"><%= member.last_name %></a></td>
    <td>|</td>
    <td><%= member.post_code %></td>
    <td>|</td>
    <td><%= member.email_address %></td>
    <td>|</td>
    <td><a href="/members/<%= member.id %>"><%= member.active_membership %>
    </a></td>
    <td>|</td>
    <td><a href="/members/<%= member.id %>/edit">
      <img src="/images/editicon.jpeg" alt="Edit" style="width:42px;height:42px;border:0" class="icon">
    </a></td>
    <td>|</td>
    <td><a href="/members/<%= member.id %>/delete">
      <img src="/images/deleteicon.jpeg" alt="Delete" style="width:42px;height:42px;border:0" class="icon">
    </a></td>
    <td>|</td>
  </tr>
  <% end %>
</table>
