<form method="post" action="/members">
  <label for="first-name-field">First Name:</label>
  <input
  type="text"
  name="first_name"
  id="first-name-field"
  />

  <label for="last-name-field">Last Name:</label>
  <input
  type="text"
  name="last_name"
  id="last-name-field"
  />

  <label for="postcode-field">Post Code:</label>
  <input
  type="text"
  name="post_code"
  id="postcode-field"
  />

  <label for="email-address-field">Email Address:</label>
  <input
  type="text"
  name="email_address"
  id="email-address-field"
  />

  <label for="active-membership-field">Active Membership:</label>
  <input
  type="boolean"
  name="active_membership"
  id="active-membership-field"
  />

  <input type="submit" value="Add new member!">
</form>
