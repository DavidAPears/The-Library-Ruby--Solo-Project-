<h1>Books</h1>

<h2>
  <a href="./">
    <img src="/images/logo.png" alt="Home Page" style="width:250px;height:150px;border:0;position:fixed; top:0; right:0;">
  </a>
</h2>

<h2>
  <a href="/books/new">
    <img src="/images/addicon.jpeg" alt="Add new book" style="width:75px;height:75px;border:0">
  </a>
</h2>

<br></br>

<h3>
  <form>
  <div>
    <input type="search" id="mySearch" name="q"
     placeholder="Enter Title Here">
    <button>Search</button>
  </div>
</form>
</h3>


<br></br>
<table>
  <tr>
    <th>Title</th>
    <th></th>
    <th>Author</th>
    <th></th>
    <th>Genre</th>
    <th></th>
    <th></th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

  <% for book in @books %>

  <tr>
    <td><a href="/books/<%= book.id %>"><%= book.title %></a></td>
    <td>|</td>
    <td><a href="/books/<%= book.id %>"><%= book.author_id %></a></td>
    <td>|</td>
    <td><a href="/books/<%= book.id %>"><%= book.genre_id %></a></td>
    <td>|</td>
    <td><a href="/books/<%= book.id %>/edit">
      <img src="/images/editicon.jpeg" alt="Edit" style="width:42px;height:42px;border:0" class="icon">
    </a></td>
    <td>|</td>
    <td><a href="/books/<%= book.id %>/delete">
      <img src="/images/deleteicon.jpeg" alt="Delete" style="width:42px;height:42px;border:0" class="icon">
    </a></td>
    <td>|</td>
  </tr>
  <% end %>
</table>
